        // Generate spectrograms for each recording
        function generateSpectrogram(canvasId, birdType) {
            const canvas = document.getElementById(canvasId);
            if (!canvas) return;

            const ctx = canvas.getContext('2d');
            canvas.width = 300;
            canvas.height = 150;

            // Clear with white background
            ctx.fillStyle = '#fff';
            ctx.fillRect(0, 0, canvas.width, canvas.height);

            // Generate bird-specific patterns
            const patterns = {
                'spectrogram-1': { // Robin - sweeping tones
                    baseFreq: 0.4,
                    sweepRange: 0.3,
                    harmonics: 3,
                    tempo: 8
                },
                'spectrogram-2': { // Blue Jay - harsh calls
                    baseFreq: 0.3,
                    sweepRange: 0.2,
                    harmonics: 5,
                    tempo: 6
                },
                'spectrogram-3': { // Cardinal - clear whistles
                    baseFreq: 0.25,
                    sweepRange: 0.4,
                    harmonics: 2,
                    tempo: 4
                }
            };

            const pattern = patterns[canvasId] || patterns['spectrogram-1'];

            // Draw spectrogram pattern
            for (let x = 0; x < canvas.width; x++) {
                for (let y = 0; y < canvas.height; y++) {
                    // Create bird call pattern
                    const time = x / canvas.width;
                    const freq = 1 - (y / canvas.height);

                    let intensity = 0;

                    // Add harmonics
                    for (let h = 1; h <= pattern.harmonics; h++) {
                        const harmFreq = pattern.baseFreq * h;
                        const sweep = Math.sin(time * pattern.tempo * Math.PI) * pattern.sweepRange;
                        const targetFreq = harmFreq + sweep;

                        const distance = Math.abs(freq - targetFreq);
                        if (distance < 0.05) {
                            intensity += Math.exp(-distance * 100) / h;
                        }
                    }

                    // Add some noise
                    intensity += Math.random() * 0.1;

                    // Clamp and convert to grayscale
                    intensity = Math.min(1, Math.max(0, intensity));
                    const gray = Math.floor(255 * (1 - intensity));

                    ctx.fillStyle = `rgb(${gray},${gray},${gray})`;
                    ctx.fillRect(x, y, 1, 1);
                }
            }
        }

        // Generate waveforms
