# BirdNET-Pi PulseAudio Daemon Configuration

# Allow network connections
exit-idle-time = -1
allow-module-loading = yes
allow-exit = yes

# Disable systemd integration on macOS
daemonize = no
use-pid-file = no
system-instance = no

# Audio settings
default-sample-format = s16le
default-sample-rate = 44100
default-sample-channels = 2
default-fragments = 8
default-fragment-size-msec = 125

# Network settings
# Replaced deprecated enable-lfe-remixing with new options
remixing-produce-lfe = no
remixing-consume-lfe = no
high-priority = yes
nice-level = -15
# Disable realtime scheduling on macOS (not supported by Homebrew build)
realtime-scheduling = no
# realtime-priority = 5  # Commented out since realtime-scheduling is disabled
