#!/usr/bin/pulseaudio -nF
#
# BirdNET-Pi PulseAudio Configuration
# This file is automatically generated - do not edit manually
#

# Load system modules
.include /opt/homebrew/etc/pulse/default.pa

# Enable network streaming
{% if enable_network %}
load-module module-native-protocol-tcp auth-ip-acl={{ container_ip }} port={{ port }}
{% else %}
# Network streaming disabled
{% endif %}

# Load network sink for container streaming
load-module module-tunnel-sink server=tcp:{{ container_ip }}:{{ port }} sink_name=birdnet_container
